<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Dynamic Title: Inspection ID -->
        <TextView
            android:id="@+id/inspection_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inspection ID"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Status Highlight at top-right corner -->
        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:text="Solved"
            android:textColor="@color/success_color"
            android:textSize="14sp"
            android:textStyle="bold"/>

        <!-- Line Separator -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/inspection_id"
            android:layout_marginTop="4dp"
            android:background="@android:color/darker_gray"/>

        <!-- Inspection Date -->
        <TextView
            android:id="@+id/inspection_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/inspection_id"
            android:layout_marginTop="8dp"
            android:text="Inspection Date"
            android:textColor="@color/secondary_text_color"
            android:textSize="16sp"/>

        <!-- Cracks Found -->
        <TextView
            android:id="@+id/cracks_found"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/inspection_date"
            android:layout_marginTop="8dp"
            android:text="Cracks Found: 0"
            android:textColor="@color/secondary_text_color"
            android:textSize="16sp"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>